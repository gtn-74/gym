<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

          <div class="field">
            <%= f.label :username, "ユーザー名" %><br />
            <%= f.text_field :username, class: "format" %>
          </div>

          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, class: "format"  %>
          </div>

          <div class="field">
            <%= f.label :password, "パスワード（6文字以上）" %><br />
            <%= f.password_field :password, class: "format"  %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "パスワード再入力" %><br />
            <%= f.password_field :password_confirmation, class: "format"  %>
          </div>

          <div class="field">
            <%= f.label :name, "氏名" %><br />
            <%= f.text_field :name, class: "format"  %>
          </div>


          <div class="field">
            <%= f.label :name_kana, "氏名カナ" %><br />
            <%= f.text_field :name_kana, class: "format"  %>
          </div>
          
          <div class="field">
            <%= f.label :club_team, "クラブチーム名" %><br />
            <%= f.text_field :club_team, class: "format"  %>
          </div>

          <div class='input-birth-wrap'>
          <%= f.label :birth_day, "生年月日" %><br />
          <%= f.date_field :birth_day, class: "format"  %>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class: :form__btn %>
          </div>
      <% end %>
    </div>
  </div>
</div>